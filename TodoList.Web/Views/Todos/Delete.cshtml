@model TodoList.Web.Models.DeleteViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Delete";
}

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>Delete @Model.Id</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Localizer["File"]
        </dt>
        <dd>
            @ViewData["FileName"]
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FilePath" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        <a asp-action="Index">@Localizer["Cancel"]</a>
    </form>
</div>
